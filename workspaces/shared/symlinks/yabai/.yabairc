#!/usr/bin/env zsh

yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# global settings
yabai -m config mouse_follows_focus          on
yabai -m config focus_follows_mouse          off
yabai -m config window_placement             second_child
yabai -m config window_topmost               off
yabai -m config window_opacity               off
yabai -m config window_shadow                on
yabai -m config window_border                off
yabai -m config window_border_width          4
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  8
yabai -m config bottom_padding               8
yabai -m config left_padding                 8
yabai -m config right_padding                8
yabai -m config window_gap                   4

yabai -m config --space 2 top_padding        0
yabai -m config --space 2 bottom_padding     0
yabai -m config --space 2 left_padding       0
yabai -m config --space 2 right_padding      0
yabai -m config --space 2 window_gap         0

yabai -m config --space 3 top_padding        0
yabai -m config --space 3 bottom_padding     0
yabai -m config --space 3 left_padding       0
yabai -m config --space 3 right_padding      0
yabai -m config --space 3 window_gap         0

yabai -m rule --add label="Finder" app="^Finder$" title="(Co(py|nnect)|Move|Info|Pref)" manage=off
yabai -m rule --add label="Safari" app="^Safari$" title="^(General|(Tab|Password|Website|Extension)s|AutoFill|Se(arch|curity)|Privacy|Advance)$" manage=off
yabai -m rule --add label="System Settings" app="^System Settings$" title=".*" manage=off
yabai -m rule --add label="App Store" app="^App Store$" manage=off
yabai -m rule --add label="Activity Monitor" app="^Activity Monitor$" manage=off
yabai -m rule --add label="KeePassXC" app="^KeePassXC$" manage=off
yabai -m rule --add label="Calculator" app="^Calculator$" manage=off
yabai -m rule --add label="Dictionary" app="^Dictionary$" manage=off
yabai -m rule --add label="mpv" app="^mpv$" manage=off
yabai -m rule --add label="Software Update" title="Software Update" manage=off
yabai -m rule --add label="About This Mac" app="System Information" title="About This Mac" manage=off
yabai -m rule --add labal="IINA Player" app="IINA" title=".*" manage=off
yabai -m rule --add app="^Digital Colou?r Meter$" sticky=on
yabai -m rule --add subrole="^AXSystemDialog$" manage=off mouse_follows_focus=off

# Don't manage Ableton Preferences window
yabai -m rule --add app="^Ableton Live 11 Suite$" title="^Preferences$" manage=off
yabai -m signal --add event="window_created" app="^Ableton Live 11 Suite$" title="^Preferences$" action="yabai -m window \$YABAI_WINDOW_ID --toggle float"

# Only allow terminal on space 2
yabai -m rule --add app="^kitty$" space=3

# Only allow Chrome and Safari on space 1
yabai -m rule --add app="^(Google Chrome|Safari|Arc)$" space=2

# Only allow VSCode on space 3
yabai -m rule --add app="^Visual Studio Code$" space=4

# Only allow Ableton on space 4
yabai -m rule --add app="^Ableton Live 11 Suite$" space=5

# Only allow Splice on space 5
yabai -m rule --add app="^Splice$" space=6

# Only allow Sunsama on space 1
yabai -m rule --add app="^Sunsama$" space=1
